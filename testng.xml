<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" thread-count="4" parallel="classes"
	 data-provider-thread-count="5"> 
	<listeners>
		<listener class-name="listeners.CustomListener"></listener>
	</listeners>
	
	<test name="Smoke">
    <classes>
      <class name="com.smoke.tests.Login"/>  
      <class name="com.smoke.tests.SignUp"/>
      <class name="com.smoke.tests.VerifyLogin"/>  
      <class name="com.smoke.tests.VerifySignup"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
